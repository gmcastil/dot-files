alias ls='ls --color=auto'
alias ll='ls -lhX --color=auto'
alias la='ls -alhX --color=auto'

alias mv='mv -v'
alias cp='cp -v'
alias du='du -h'
alias df='df -h'

## a quick way to get out of current directory ##
alias ..='cd ..'
alias ...='cd ../../../'
alias ....='cd ../../../../'
alias .....='cd ../../../../'
alias .4='cd ../../../../'
alias .5='cd ../../../../..'
